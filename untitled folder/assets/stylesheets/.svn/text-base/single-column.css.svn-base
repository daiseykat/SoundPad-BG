@import 'html.css';

body {
    overflow: hidden;
}

.header {
    background: red; /* DEBUG ONLY */

    position:absolute; z-index:2;
    top:0; left:0;
    width:100%;
    height: 199px; /* SET THIS TO ACTUAL HEADER HEIGHT */
}

.content {
    background: white; /* DEBUG ONLY */

    position: absolute; z-index: 1;
    top:199px; left: 0; bottom: 45px; /* TOP AND BOTTOM MUST MATCH VALUES IN HEADER AND FOOTER */
    width: 100%;    
}

#wrapper {
    width: 100%;
    height: 100%;
    position: absolute;
    overflow: auto;
}

.footer {
    background: blue; /* DEBUG ONLY */

    position: absolute; z-index: 2;
    bottom: 0; left: 0; width: 100%;
    height: 45px;
}


.scroller ul li {
    display: block;
    height: 50px;
    border: 1px solid silver;
}



